---
import HeroCarousel from './HeroCarousel.astro';
import RotatingText from './RotatingText';
// Componente Hero para la landing page
---

<section id="inicio" class="relative min-h-screen flex items-end justify-center pt-20">
  <!-- Carousel de imágenes -->
  <HeroCarousel />
  
  <!-- Contenido -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 pb-12 sm:pb-16 lg:pb-24 relative z-20 w-full">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Título Principal -->
      <h1 class="text-4xl sm:text-6xl lg:text-7xl font-serif text-neutral-dark mb-4 sm:mb-6 leading-tight animate-fade-in-up delay-200">
        <span class="whitespace-nowrap">Transforma tu salud</span><br class="sm:hidden" />
        <span class="sm:inline"> con </span><RotatingText client:load />
      </h1>

      <!-- Subtítulo -->
      <p class="text-base sm:text-xl lg:text-2xl font-sans text-neutral-dark/90 mb-6 sm:mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-300">
        Somos tu guía para desbloquear tu mejor versión
      </p>

      <!-- Botones CTA -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center animate-fade-in-up delay-400">
        <a 
          href="/test-epigenetico" 
          class="w-auto max-w-[280px] sm:w-auto sm:max-w-none px-6 py-3 sm:px-8 sm:py-4 bg-primary text-neutral-dark hover:bg-primary/90 transition-all duration-300 font-sans text-base sm:text-base rounded-full shadow-lg hover:shadow-xl animate-scale-in delay-500"
        >
          Comienza tu transformación
        </a>
        <a 
          href="#biohacking" 
          class="w-auto max-w-[280px] sm:w-auto sm:max-w-none px-6 py-3 sm:px-8 sm:py-4 border-2 border-neutral-dark text-neutral-dark hover:bg-neutral-dark hover:text-primary transition-all duration-300 font-sans text-base sm:text-base rounded-full animate-scale-in delay-600"
        >
          Conoce más
        </a>
      </div>

    </div>
  </div>
</section>


