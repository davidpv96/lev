---
import HeroCarouselReact from './HeroCarousel';
// Componente Carousel para el Hero usando Swiper
---

<HeroCarouselReact client:load class="animate-fade-in" />

<style>
  .hero-carousel {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .hero-carousel .swiper-slide {
    width: 100%;
    height: 100%;
  }

</style>

